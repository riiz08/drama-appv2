{
  "redirects": [
    {
      "source": "/drama/detail/:slug(.*)",
      "destination": "/drama/:slug",
      "statusCode": 301
    },
    {
      "source": "/drama/watch/:slug(.*)",
      "destination": "/:slug",
      "statusCode": 301
    },
    {
      "source": "/watch/:slug(.*)",
      "destination": "/:slug",
      "statusCode": 301
    },
    {
      "source": "/episode/:slug(.*)",
      "destination": "/:slug",
      "statusCode": 301
    },
    {
      "source": "/latest-update",
      "destination": "/drama?sort=latest",
      "statusCode": 301
    },
    {
      "source": "/popular",
      "destination": "/drama?sort=popular",
      "statusCode": 301
    }
  ],
  "functions": {
    "api/**/*": {
      "includeFiles": ".prisma/**"
    }
  }
}
